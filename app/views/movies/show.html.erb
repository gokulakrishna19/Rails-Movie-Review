
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.title %></td>
              </tr>
               <tr>
                <td><strong>Description:</strong></td>
                <td><%= @movie.description %></td>
              </tr>
               <tr>
                <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
               <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>
               <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to 'write a review', new_movie_rating_path(@movie) %>
        </div>
      </div>
      <div class = "col-md-7 col-md-offset-1">
        <h1 class="rating_title">
          <%= @movie.title %>
        </h1>
        <p>
          <%= @movie.description %>
        </p>
        <% if @ratings.blank? %>
          <h3> No reviews yet, would you like to add review!</h3>
          <%= link_to "Write review", new_movie_rating_path(@movie), class: "btn btn-danger" %>
        <% else %>
          <% @ratings.each do |rating| %>
            <div class="reviews">
              <div class='star-rating' data-score = <%= rating.rate %> >
                
              </div>
              
              <p><%= rating.comment %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>




<%= link_to 'Edit', edit_movie_path(@movie) %> 
<%= link_to 'Back', movies_path %>

<script>
  ${'.star-rating'}.raty({
    path: '/assets/',
    readOnly: true,
    score: function(){
          return $(this).attr('data-score');
    }
  });
 
</script>
